dp <- DotPlot(amp2_small, features = c("ECM.Glycoproteins1", "ECM.affiliated.Proteins1", "ECM.Regulators1", "Secreted.Factors1", "Collagens1", "Proteoglycans1"), group.by = "cell_type") +
  scale_size(range = c(2, 8)) +  # Adjust dot size
  scale_color_gradient(low = "lightblue", high = "darkred") +  # Continuous color scale
  theme_minimal(base_size = 14) +  # Minimal theme with larger text
  theme(
    panel.grid = element_blank(),  # Remove gridlines
    axis.text.x = element_text(angle = 45, hjust = 1),  # Rotate x-axis labels
    axis.ticks = element_line(color = "black"),
    panel.border = element_rect(color = "black", fill = NA, size = 1)# Add axis ticks
  ) +
  labs(size = "Fraction", color = "Expression") +RotatedAxis()+
  geom_point(aes(size=pct.exp), shape = 21, colour="black", stroke=0.5)

